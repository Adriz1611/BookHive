<%- include('./partials/header') %>

    <!-- Flash message for success -->
    <% if(success.length> 0) { %>
        <div
            class="fixed top-5 left-1/2 transform -translate-x-1/2 py-3 px-6 rounded-md bg-green-500 shadow-lg z-10 text-white text-sm font-semibold">
            <%= success %>
        </div>
        <% } %>

            <!-- Container -->
            <div class="min-h-screen bg-gray-50 flex flex-col py-10 px-6">

                <!-- Main Card -->
                <div class="mx-auto w-full max-w-4xl bg-white rounded-lg shadow-md p-8">
                    <h2 class="text-2xl font-bold mb-6 text-gray-800">Create New Product</h2>

                    <!-- Form -->
                    <form action="/products/create" method="post" enctype="multipart/form-data" class="space-y-6">
                        <!-- Book Cover -->
                        <div>
                            <label for="image" class="block mb-2 font-medium text-gray-700">
                                Book Cover Image
                            </label>
                            <input id="image" name="image" type="file"
                                class="block w-full border-gray-300 rounded-md shadow-sm text-sm file:mr-4 file:py-2 file:px-4 file:rounded-l-md file:border-0 file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" />
                        </div>

                        <!-- Basic & Book-specific fields -->
                        <div>
                            <h3 class="text-lg font-semibold mb-3 text-gray-700">Book Details</h3>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <input name="name" type="text" placeholder="Book Title"
                                    class="border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100" />
                                <input name="author" type="text" placeholder="Author Name"
                                    class="border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100" />
                                <input name="genre" type="text" placeholder="Genre"
                                    class="border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100" />
                                <input name="rating" type="number" step="0.1" placeholder="Rating (e.g. 4.5)"
                                    class="border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100" />
                                <input name="reviewsCount" type="number" placeholder="Number of Reviews"
                                    class="border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100" />
                                <input name="pages" type="number" placeholder="Number of Pages"
                                    class="border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100" />
                                <input name="language" type="text" placeholder="Language"
                                    class="border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100" />
                                <input name="publicationDate" type="text"
                                    placeholder="Publication Date (e.g. January 15, 2023)"
                                    class="border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100" />
                            </div>
                        </div>

                        <!-- About and Description fields -->
                        <div>
                            <h3 class="text-lg font-semibold mb-3 text-gray-700">About & Description</h3>

                            <label for="about" class="block mb-1 font-medium text-gray-700">
                                Short Overview (about)
                            </label>
                            <textarea id="about" name="about" rows="2" placeholder="A brief overview of the book..."
                                class="w-full border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100 mb-4"></textarea>

                            <label for="description" class="block mb-1 font-medium text-gray-700">
                                Full Description
                            </label>
                            <textarea id="description" name="description" rows="4"
                                placeholder="A more in-depth description of the book..."
                                class="w-full border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100"></textarea>
                        </div>

                        <!-- Pricing & Inventory -->
                        <div>
                            <h3 class="text-lg font-semibold mb-3 text-gray-700">Pricing & Inventory</h3>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <input name="price" type="text" placeholder="Price"
                                    class="border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100" />
                                <input name="discount" type="text" placeholder="Discount"
                                    class="border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100" />
                                <input name="quantity" type="number" placeholder="Quantity"
                                    class="border border-gray-300 rounded-md p-2 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-100" />
                            </div>
                        </div>

                        <!-- Submit button -->
                        <div>
                            <input
                                class="inline-block px-6 py-2 text-white bg-blue-600 hover:bg-blue-700 rounded-md font-semibold shadow-sm cursor-pointer transition ease-in-out"
                                type="submit" value="Create Product" />
                        </div>
                    </form>
                </div>
            </div>

         