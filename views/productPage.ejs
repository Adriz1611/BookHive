<%- include("./partials/header") %>

    <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row md:gap-8">
            <div class="md:w-1/2 mb-6 md:mb-0">
                <% if (product.image) { %>
                    <img class="w-full h-auto object-cover rounded"
                        src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                        alt="<%= product.name %>" />
                    <% } else { %>
                        <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
                            No Image
                        </div>
                        <% } %>
            </div>

            <div class="md:w-1/2 flex flex-col">
                <h1 class="text-2xl font-bold text-gray-800 mb-2">
                    <%= product.name %>
                </h1>
                <p class="text-xl text-gray-700 mb-4">â‚¹ <%= product.price %>
                </p>

                <% if (product.discount && product.discount> 0) { %>
                    <p class="inline-block bg-green-100 text-green-700 px-2 py-1 rounded mb-4">
                        Discount: <%= product.discount %>%
                    </p>
                    <% } %>

                        <!-- Product description or additional info -->
                        <% if (product.about) { %>
                            <p class="text-gray-600 mb-4">
                                <%= product.about %>
                            </p>
                            <% } %>

                                <div class="mt-4">
                                    <button
                                        class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors">
                                        Add to Cart
                                    </button>
                                </div>
            </div>
        </div>
    </div>

    <%- include("./partials/footer") %>