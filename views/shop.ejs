<%- include('./partials/header') %>
    <%- include('./partials/navbar') %>

        <!-- Banner Section -->
        <div class="w-full h-[400px] bg-cover bg-center relative flex items-center justify-center"
            style="background-image: url('/images/shop-bg.jpg');">
            <!-- Optional overlay to darken or lighten the banner image -->
            <div class="absolute inset-0 bg-black bg-opacity-30"></div>
        </div>

        <!-- Heading Below Banner -->
        <div class="w-full flex justify-center my-8">
            <h2 style="
      color: #000;
      font-family: Newsreader;
      font-size: 2.5rem;
      font-style: italic;
      font-weight: 400;
      line-height: normal;
      letter-spacing: 0.1rem;
    ">
                “Explore Our Collection”
            </h2>
        </div>

        <!-- Main Container -->
        <div class="w-full min-h-screen flex items-start px-8 md:px-20 py-10 bg-gray-50">

            <!-- Sidebar -->
            <aside class="hidden md:block w-[25%] flex-shrink-0 pr-8">
                <!-- Sort & Category Selects -->
                <div class="mb-8 space-y-4">
                    <!-- Sort By -->
                    <form action="/shop" method="GET" class="flex items-center gap-2">
                        <label for="sortby" class="text-lg font-semibold">Sort by:</label>
                        <select id="sortby" name="sortby" class="border border-gray-300 rounded px-2 py-1">
                            <option value="popular">Popular</option>
                            <option value="newest">Newest</option>
                        </select>
                    </form>

                    <!-- Category -->
                    <form action="/shop" method="GET" class="flex items-center gap-2">
                        <label for="category" class="text-lg font-semibold">Category:</label>
                        <select id="category" name="category" class="border border-gray-300 rounded px-2 py-1">
                            <option value="all">All Products</option>
                            <option value="new">New Products</option>
                            <option value="discounted">Discounted Products</option>
                        </select>
                    </form>
                </div>

                <!-- Filter by Section -->
                <div class="space-y-2">
                    <p class="font-semibold">Filter by:</p>
                    <a class="hover:text-blue-600 transition-colors block" href="#">Availability</a>
                    <a class="hover:text-blue-600 transition-colors block" href="#">Discount</a>
                </div>
            </aside>

            <section class="flex-1 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-8 gap-y-8">
                <% products.forEach(function(product) { %>
                    <div
                        class="relative bg-white rounded-lg shadow hover:shadow-lg transition-shadow duration-300 overflow-hidden flex flex-col">
                        <!-- Image or Placeholder -->
                        <div class="relative h-64 bg-gray-200 flex items-center justify-center">
                            <% if (product.image) { %>
                                <img class="object-cover w-full h-full" src="/<%= product.image %>" alt="<%= product.name %>" />
                                <% } else { %>
                                    <span class="text-gray-500">No Image</span>
                                    <% } %>
                        </div>
            
                        <!-- Book Info -->
                        <div class="p-4 bg-green-100">
                            <h3 class="text-lg font-semibold text-gray-800">
                                <%= product.name %>
                            </h3>
                            <p class="mt-1 text-gray-600">
                                ₹ <%= product.price %>
                            </p>
                        </div>
            
                        <!-- Entire Card Clickable -->
                        <a href="/product/<%= product._id %>" class="absolute inset-0"></a>
                    </div>
                    <% }) %>
            </section>

        </div>

        <%- include('./partials/footer') %>