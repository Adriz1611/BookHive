<%- include("./partials/header") %>
    <%- include("./partials/navbar") %>

        <!-- ───── Hero / banner ───── -->
        <section class="relative h-[35vh] w-full overflow-hidden">
            <img src="/images/blog-banner.jpg" alt="Blog banner"
                class="absolute inset-0 w-full h-full object-cover object-center" />
            <div class="absolute inset-0 bg-gradient-to-r from-black/70 to-black/40"></div>

            <div class="relative z-10 flex items-center justify-center h-full">
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold text-white tracking-wide font-[Newsreader]">
                    Latest&nbsp;Stories
                </h1>
            </div>
        </section>

        <!-- ───── Posts grid ───── -->
        <main class="max-w-7xl mx-auto px-4 py-16 font-[Raleway]">
            <div class="grid gap-12 md:grid-cols-2 lg:grid-cols-3">

                <!-- ── Post card #1 ── -->
                <article class="group bg-white rounded-xl shadow-sm hover:shadow-lg transition">
                    <div class="relative h-56 overflow-hidden rounded-t-xl bg-gray-200">
                        <!-- If you have a real image, drop it here; otherwise gray placeholder shows -->
                        <img src="/images/great-gatsby.jpeg" onerror="this.style.display='none'" alt="The Great Gatsby"
                            class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition duration-500" />
                    </div>

                    <div class="p-6 flex flex-col">
                        <h2 class="text-xl font-semibold text-gray-800 mb-2 group-hover:text-[#1a3a3a] transition">
                            The Great Gatsby
                        </h2>
                        <p class="text-gray-600 leading-relaxed flex-1">
                            “The Great Gatsby,” a novel by F. Scott Fitzgerald, follows the story of
                            Jay Gatsby and his unrequited love for Daisy Buchanan.
                        </p>

                        <a href="#" class="mt-4 inline-flex items-center text-[#1a3a3a] font-medium hover:underline">
                            Read more
                            <i class="ri-arrow-right-line ml-1 text-lg"></i>
                        </a>
                    </div>
                </article>

                <!-- ── Post card #2 ── -->
                <article class="group bg-white rounded-xl shadow-sm hover:shadow-lg transition">
                    <div class="relative h-56 overflow-hidden rounded-t-xl bg-gray-200">
                        <img src="/images/book-cover-To-Kill-a-Mockingbird-many-1961.webp" onerror="this.style.display='none'"
                            alt="To Kill a Mockingbird"
                            class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition duration-500" />
                    </div>

                    <div class="p-6 flex flex-col">
                        <h2 class="text-xl font-semibold text-gray-800 mb-2 group-hover:text-[#1a3a3a] transition">
                            To Kill a Mockingbird
                        </h2>
                        <p class="text-gray-600 leading-relaxed flex-1">
                            Harper Lee’s timeless novel tackles racial injustice and moral growth
                            through the eyes of young Scout Finch.
                        </p>

                        <a href="#" class="mt-4 inline-flex items-center text-[#1a3a3a] font-medium hover:underline">
                            Read more
                            <i class="ri-arrow-right-line ml-1 text-lg"></i>
                        </a>
                    </div>
                </article>

                <!-- ── Post card #3 ── -->
                <article class="group bg-white rounded-xl shadow-sm hover:shadow-lg transition">
                    <div class="relative h-56 overflow-hidden rounded-t-xl bg-gray-200">
                        <img src="/images/pride.jpg" onerror="this.style.display='none'" alt="Pride and Prejudice"
                            class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition duration-500" />
                    </div>

                    <div class="p-6 flex flex-col">
                        <h2 class="text-xl font-semibold text-gray-800 mb-2 group-hover:text-[#1a3a3a] transition">
                            Pride and Prejudice
                        </h2>
                        <p class="text-gray-600 leading-relaxed flex-1">
                            Jane Austen explores class, family, and the pitfalls of first impressions
                            in Regency-era England.
                        </p>

                        <a href="#" class="mt-4 inline-flex items-center text-[#1a3a3a] font-medium hover:underline">
                            Read more
                            <i class="ri-arrow-right-line ml-1 text-lg"></i>
                        </a>
                    </div>
                </article>

            </div>
        </main>

        <%- include("./partials/footer") %>